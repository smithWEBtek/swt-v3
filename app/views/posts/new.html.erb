<div class="wrapper wrapper_padding clearfix">
  <div class="sidebar">

    <div class="col-1">
      
        <%= form_for @post do |f| %>
					<p>
						<%= f.label :date %>
							<br>
							<%= f.date_field :date, size: 30 %>
					</p>
					<p>
						<%= f.label :title %>
							<br>
							<%= f.text_field :title, size: 30 %>
					</p>
					<p>
						<%= f.label :repo %>
							<br>
							<%= f.text_field :repo, size: 30 %>
					</p>
					<p>
						<%= f.label :summary %>
							<br>
							<%= f.text_area :summary, cols: "50", rows: "5" %>
					</p>
					<p>
						<%= f.label :content_md %>
							<br>
							<%= f.text_field :content_md %>
					</p>
				<%= f.submit %> 
			<% end %>
    </div>
  </div>
</div>